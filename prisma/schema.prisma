generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id                String    @id @default(cuid())
  slug              String    @unique
  title             String
  gameTitle         String
  fairPriceTier     String
  fairPriceAmount   Float?
  quickVerdict      String
  content           String
  featuredImage     String
  featuredImagePathname String?
  youtubeVideoId    String?
  pros              String    @default("[]")
  cons              String    @default("[]")
  status            String    @default("draft")
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  publishedAt       DateTime?

  @@index([status])
  @@index([fairPriceTier])
  @@index([createdAt])
  @@index([publishedAt])
} 